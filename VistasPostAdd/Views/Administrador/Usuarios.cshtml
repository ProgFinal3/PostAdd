
@{
    ViewData["Title"] = "Usuarios";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-3 col-md-3" style="padding-left:0">
                <div class="admin">
                    <span>Administrador</span>
                    <ul>
                       <partial name="_IndexAdminPartial">
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <div class="admin-root">

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="contador">
                                <span><i class="fa fa-user"></i> 500 Usuarios</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="contador">
                                <span><i class="fa fa-lock"></i> 5 Bloqueados</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="user-blocked">
                                <span>Usuarios</span>
                                <div class="pre-scrollable" style="height:100vh">
                                    <table class="table">
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <th>Correo</th>
                                            <th>Anuncios</th>
                                            <th>Eliminar</th>
                                            <th>Bloquear</th>
                                        </tr>
                                        <tr>
                                            <td>Jill</td>
                                            <td>Smith</td>
                                            <td>jill@@jilmail.com</td>
                                            <td>50</td>
                                            <td><a class="btn btn-danger" asp-action="DeleteUser" asp-route-id="">Eliminar</a></td>
                                            <td><a class="btn btn-warning" asp-action="BlockedUser" asp-route-id="">Bloquear</a></td>
                                        </tr>
                                    </table>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

