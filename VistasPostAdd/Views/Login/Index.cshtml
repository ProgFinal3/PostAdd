@model VistasPostAdd.ViewModel.LoginVM
@{
    ViewData["Title"] = "PostAdd";
}

<div class="row">
    <div class="col-lg-12">
        <span id="r-title">Bienvenido a PostAdd, Inicia sesión y disfruta de los beneficios.</span>
        <div class="login">
            <span>Inicia sesión.</span>
            <div class="formulario">
                <form asp-action="Login">

                    <label asp-for="Email">Correo:</label>
                    <input asp-for="Email" id="Email" name="Email" placeholder="Correo">

                    <label asp-for="Password">Contraseña:</label>
                    <input asp-for="Password" id="Password" name="Password" placeholder="Contraseña">

                    <a href="#">¿Olvidaste tu contraseña?</a>
                    <input type="submit" value="Iniciar sesión">
                </form>
            </div>
        </div>
    </div>
</div>