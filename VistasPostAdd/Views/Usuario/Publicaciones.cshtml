@model IEnumerable<PostAds.Models.Anuncio>
@{
    ViewData["Title"] = "Publicaciones";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-3 col-md-3" style="padding-left:0">
                <div class="admin">
                    <span>Publicaciones</span>
                    <ul>
                       <partial name="_IndexUserPartial">
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <div class="admin-root">
                    <div class="row"> 
                        <div class="col-lg-6">
                            <div class="contador">
                                <span><i class="fa fa-plus-circle"></i> @Model.Count() Publicaciones</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="contador">
                                <span><i class="fa fa-plus-circle"></i> <i class="fa fa-lock"></i> @Model.Where(x => x.Bloqueado == true).Count() Bloqueadas</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ads-blocked-page">
                                <span>Mis Publicaciones</span>
                                <div class="pre-scrollable" style="height:100vh">
                                    <table class="table">
                                        <tr>
                                            <th>Id</th>
                                            <th>Titulo</th>
                                            <th>Precio</th>
                                            <th>Fecha</th>
                                            <th>Editar</th>
                                            <th>Eliminar</th>
                                        </tr>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Titulo</td>
                                            <td>@item.PrecioVenta</td>
                                            <td>@item.FechaPublicaccion.ToString("dd/MM/yyyy H:mm")</td>
                                            <td><a class="btn btn-primary" asp-controller="Publicar" asp-action="Index" asp-route-id="@item.Id">Editar</a></td>
                                            <td><a class="btn btn-danger" asp-action="DeletePublicaciones" asp-route-id="@item.Id">Eliminar</a></td>
                                        </tr>

                                        }
                                    </table>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


